---
pagination:
    data: collections
    size: 1
    alias: tag
    permalink: /tags/{{ tag | slugify }}/
---

<h1>Posts tagged with "{{ tag }}"</h1>

<ol>
    {%- set taglist = collections[tag] -%}
    {%- for post in taglist -%}
        <li><a href="{{ post.url }}"> {{ post.data.title }} </a></li>
    {%- endfor -%}

</ol>

