---
eleventyComputed:
    title: Posts Tagged with {{ tag }}
layout: _base.njk
pagination:
    data: collections
    size: 1
    alias: tag
    permalink: /tags/{{ tag | slugify }}/
    addAllPagesToCollections: true
---

{% include '_navigation.njk' %}

<main class="flex flex-col items-center">

    <h2 class="font-bold text-center text-2xl md:text-3xl lg:text-4xl">Posts tagged with "{{ tag }}"</h2>

    <ol class="list-decimal list-outside marker:text-violet-400 marker:text-[2rem] marker:hover:shadow-2xl">
        {# {%- set taglist = collections[ tag ] -%} #}
        {%- for post in collections[ tag ] -%}
            {%- include '_post-card.njk' -%}
        {%- endfor -%}
    </ol>
   
</main>